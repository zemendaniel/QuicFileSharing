<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="QuicFileSharing.GUI.Views.FileOfferDialog"
        xmlns:vm="using:QuicFileSharing.GUI.ViewModels"
        Title="Incoming File"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner"
        x:DataType="vm:FileOfferDialogViewModel"
        CanResize="False">

    <StackPanel Spacing="12" Margin="20">
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Reject" Command="{Binding RejectCommand}" Width="80"/>
            <Button Content="Accept" Command="{Binding AcceptCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>